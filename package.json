{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "chatgpt",
  "title": "chatGPT",
  "description": "This is a Raycast version of chatGPT",
  "icon": "chatGPT-icon.png",
  "author": "Meredith2000",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "ask chatGPT",
      "description": "Interact with chatGPT",
      "mode": "view",
      "preferences": [
        {
          "name": "url",
          "title": "Your Url",
          "description": "Your request url",
          "type": "textfield",
          "default": "https://api.openai.com/v1/chat/completions/",
          "required": true
        },
        {
          "name": "apiKey",
          "title": "Your API Key",
          "description": "API Key is used to authenticate with OpenAI API",
          "type": "password",
          "required": true
        }
      ]
    },
    {
      "name": "history",
      "title": "chat history",
      "description": "a place to save your chat history",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.8",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
